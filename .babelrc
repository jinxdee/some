{
    "presets": [
        "es2015",
        "stage-0",
        "react"
    ],
    "plugins": [
        "react-hot-loader/babel",
        "transform-decorators",
        "transform-decorators-legacy"
    ],
    "env": {
        "production": {
            "presets": [
                "react-optimize"
            ]
        },
        "development": {
            "plugins": [
                "transform-react-jsx-source",
                "transform-decorators-legacy"
            ]
        }
    }
}